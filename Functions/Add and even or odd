#include <stdio.h>
void main()

{
  clrscr();
  add();
  isEven();
  add();
  add();
  
}

add()
{
  int a,b,ans;
  printf("Enter two numbers :");
  scanf("%d%d",&a,&b);
  ans = a+b;
  printf("The Addition is :%d",ans);
}

isEven()
{
  int i;
  printf("Enter a number :")
  scanf("%d",i);
  if(i%2==0)
  printf("Number is Even");
  else
  printf("Number is odd");
}
